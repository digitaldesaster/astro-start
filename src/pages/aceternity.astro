---
import Layout from '../layouts/Layout.astro';
import { BackgroundBeamsWithCollision } from '../components/ui/aceternity/beams';
import { AnimatedTooltipPreview } from '../components/ui/aceternity/animated-tooltip-demo';
import { MenuBar } from '../components/ui/v0/MenuBar';
import { TextContent } from '../components/ui/aceternity/beam-tooltip-demo';

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout title="Shadcn UI + Astro">
	<main class="flex flex-col items-center justify-start bg-neutral-50 dark:bg-neutral-950 overflow-hidden">
		<div class="w-full max-w-4xl mx-auto px-4 py-8">
			<MenuBar client:load />
		</div>
		
		<div class="w-full flex-1">
			<BackgroundBeamsWithCollision client:load className="!h-[calc(100vh-120px)]">
				<div class="relative z-10 flex flex-col w-full h-full text-center">
					<div class="w-full max-w-4xl mx-auto">
						<TextContent client:load />
					</div>
				</div>
			</BackgroundBeamsWithCollision>
		</div>
	</main>
</Layout>

<style>
	main {
		scroll-behavior: smooth;
		min-height: 100vh;
	}

	html, body {
		height: 100%;
		margin: 0;
		padding: 0;
	}
</style>

---
import Layout from '../layouts/Layout.astro';
import { MenuBar } from '../components/ui/v0/MenuBar';
import { TypewriterEffectDemo } from '../components/ui/aceternity/typewriter-effect-demo';
---

<Layout title="Shadcn UI + Astro">
	<main class="min-h-screen flex flex-col items-center justify-start py-8 bg-neutral-50 dark:bg-neutral-950">
		<div class="w-full max-w-4xl mx-auto px-4">
			<MenuBar client:load />
			<TypewriterEffectDemo client:load />
		</div>
	</main>
</Layout>

<style>
	main {
		scroll-behavior: smooth;
	}
</style>

---
import Layout from '../layouts/Layout.astro';
import { MenuBar } from '../components/ui/v0/MenuBar';
---

<Layout title="Shadcn UI + Astro">
	<main class="min-h-screen flex flex-col items-center justify-start py-8 bg-neutral-50 dark:bg-neutral-950">
		<div class="w-full max-w-4xl mx-auto px-4">
			<MenuBar client:load />
			<div class="flex items-center justify-center mt-8">
				<h1 class="text-4xl font-bold text-neutral-800 dark:text-neutral-100">Hello World</h1>
			</div>
		</div>
	</main>
</Layout>

<style>
	main {
		scroll-behavior: smooth;
	}
</style>
